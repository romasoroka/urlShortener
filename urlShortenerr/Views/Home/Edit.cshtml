@using urlShortenerr.Controllers
@model UrlViewModel

<h1>Edit URL</h1>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<form method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="OriginalUrl">Original URL</label>
        <input type="text" id="OriginalUrl" asp-for="OriginalUrl" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="ShortUrl">Shortened URL</label>
        <input type="text" id="ShortUrl" asp-for="ShortUrl" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save Changes</button>
</form>
